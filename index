      { nombre: "Convertir", url: "https://carlos2601.github.io/converti/", icono: "üîÑ" },
      { nombre: "Descargar con C√©dula", url: "https://carlos2601.github.io/elusuariodescargarconexpediciondecedula/", icono: "üì•" },
      { nombre: "Junta Bateas Sector 3", url: "https://carlos2601.github.io/JuntaBateasSector3", icono: "üèòÔ∏è" },
      { nombre: "PDF ‚Üî JPG", url: "https://carlos2601.github.io/pdf-jpg", icono: "üñ®Ô∏è" },
      { nombre: "Convertir PDF-JPG", url: "https://carlos2601.github.io/convertir-pdf-jpg/", icono: "üì∑" },
      { nombre: "Mensual", url: "https://carlos2601.github.io/mensual", icono: "üóìÔ∏è" },
      { nombre: "Cesant√≠as y Primas", url: "https://carlos2601.github.io/cesant-as-primas/", icono: "üí∞" },
      { nombre: "Calcular D√≠a Laborado", url: "https://carlos2601.github.io/calculadora/", icono: "üßÆ" },
      { nombre: "Calcular Horas", url: "https://carlos2601.github.io/horas/", icono: "üïí" },
    ];

    function login() {
      const user = document.getElementById("username").value;
      const pass = document.getElementById("password").value;
      const error = document.getElementById("loginError");

      if (user === "4438681" && pass === "4438681") {
        document.getElementById("loginContainer").classList.remove("active");
        document.getElementById("appContainer").classList.add("active");
        renderApps();
      } else {
        error.textContent = "Usuario o clave incorrectos.";
      }
    }

    function renderApps() {
      const grid = document.getElementById("appGrid");
      grid.innerHTML = "";
      apps.forEach(app => {
        const card = document.createElement("div");
        card.className = "app-card";
        card.innerHTML = `<div style="font-size:2rem;">${app.icono}</div><h3>${app.nombre}</h3>`;
        card.onclick = () => mostrarApp(app.url);
        grid.appendChild(card);
      });
    }

    function mostrarApp(url) {
      document.getElementById("appContainer").classList.remove("active");
      document.getElementById("viewer").src = url;
      document.getElementById("iframeContainer").classList.add("active");
    }

    function volverAlPanel() {
      document.getElementById("iframeContainer").classList.remove("active");
      document.getElementById("viewer").src = "";
      document.getElementById("appContainer").classList.add("active");
    }
  </script>
